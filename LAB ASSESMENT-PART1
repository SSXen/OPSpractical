##Setting up mySql database 
##install my sql
sudo apt update
sudo apt install -y mysql-server

#start
sudo systemctl start mysql

#enable to start on boot
sudo systemctl enable mysql

#Secure sql installation
sudo mysql_secure_installation

#configure firewall rules
sudo ufw allow mysql

sudo mysql
use mysql;
select user,authentication_string,plugin,host from mysql.user;
ALTER USER 'root'@'localhost' IDENTIFIED WITH caching_sha2_password BY 'MasiaMSS';
FLUSH PRIVILEGES;

#access mysql client
mysql -u root -p
 #remote connection
sudo nano /etc/mysql/mysql.conf.d/mysqld.cnf
bind-address = your_vm_public_ip
mysql -u root -p
GRANT ALL PRIVILEGES ON your_database.* TO 'your_username'@'your_web_server_ip' IDENTIFIED BY 'your_password';
FLUSH PRIVILEGES;
EXIT;
sudo service mysql restart
sudo ufw allow 3306/tcp
mysql -u your_username -h your_vm_public_ip -p


