##Setting up mySql database 
##install my sql
apt update
apt install -y mysql-server

#start
systemctl start mysql

#enable to start on boot
systemctl enable mysql

#Secure sql installation
mysql_secure-installation

#configure firewall rules
ufw allow mysql

#access mysql client
-u root -p

